<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8">
    <meta name="google" content="notranslate">
    <meta http-equiv="Content-Language" content="en">
    <title>@ViewData["Title"] - Client Contact Linker</title>
    <!--Imports-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/lib/materialize/css/materialize.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/select2.css" rel="stylesheet" />
    @RenderSection("header", required: false)
</head>
<body>
    <header>

        <ul id="sidenav_menu" class="sidenav">
            <li><a asp-controller="Home" asp-action="Index"><span class="material-icons-outlined">home</span>Client Contact Linker</a></li>
            <li><div class="divider"></div></li>
            <li><a asp-controller="Contact" asp-action="Index"><span class="material-icons-outlined">contacts</span>Contacts</a></li>
            <li><a asp-controller="Client" asp-action="Index"><span class="material-icons-outlined">person</span>Clients</a></li>
        </ul>
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper blue">
                    <a href="#" data-target="sidenav_menu" class="sidenav-trigger show-on-large"><i class="material-icons">menu</i></a>
                    <a asp-action="Index" asp-controller="Home" class="brand-logo center"><span class="material-icons-outlined">home</span></a>
                </div>
            </nav>
        </div>
    </header>
    <main role="main">
        <div class="container">

            @RenderBody()

            <div id="confirmationModal" class="modal green">
                <div class="modal-content">
                    <h2 class="center-align" id="confirmModalHeader">Modal Header</h2>
                    <h5 class="center-align" id="confirmModalText">A bunch of text</h5>
                    <h5 class="center-align" id="confirmModalQuestion"></h5>
                </div>
                <div class="modal-footer">
                    <a href="#!" class="modal-close waves-effect red btn-flat"><h6>Cancel</h6></a>
                    <a href="#!" id="confirmSubmitBtn" class="waves-effect green btn-flat"><h6>Confirm</h6></a>
                </div>
            </div>
        </div>
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Client Contact Linker
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/lib/select2/js/select2.js"></script>
    <script src="~/lib/materialize/js/materialize.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <script>
        $(document).ready(function () {
            $('.tabs').tabs();
            $('.sidenav').sidenav();
            $('.modal').modal();
            $('.fixed-action-btn').floatingActionButton();
            $('.tooltipped').tooltip();
            var source = '@(ViewData["Toast"])';
            if (source != "") {
                M.toast({html: source})
            }
            var error = '@(TempData["Error"])';
            if (error != "" && error != null) {
                M.toast({html: error})
            }
            $('.normalSelect').formSelect();
            $('.searchSelect').select2({
                placeholder: 'Select an option'
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>