@model ContactsVM
@{
    ViewData["Title"] = "Contacts";

}
<div class="row z-depth-2">
    <h4 class="center-align">Contacts</h4>
    <div class="divider"></div>
    @if (Model.Contacts.Count > 0)
    {
        <div class="col s12">
            <div class="row">
                <div class="col s12">
                    <table class="highlight">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Email</th>
                                <th>No. of linked clients</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ContactModel contact in Model.Contacts)
                            {
                                <tr>
                                    <td>@contact.Name</td>
                                    <td>@contact.Surname</td>
                                    <td>@contact.Email</td>
                                    <td>@contact.LinkedClientsCount</td>
                                    <td>
                                        <a class="tooltipped" onclick="DeleteContact(@contact.Id)"
                                           data-position="top" data-tooltip="Delete Contact">
                                            <i class="material-icons">delete</i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col s12 m12 l12">
            <div class="card-panel green center-align">
                <span class="white-text">
                    No contact(s) found.
                </span>
            </div>
        </div>
    }
</div>
<div class="row">
    <div class="input-field col s12 center-align ">
        <a asp-action="Index" asp-controller="Home" class="btn waves-effect waves-light btn-large blue lighten-1">
            <span class="material-icons md-dark md-24">
                keyboard_return
            </span>
            <span class="black-text">Back</span>
        </a>
    </div>
</div>

<div class="fixed-action-btn">
    <a class="btn-floating btn-large green tooltipped modal-trigger" href="#addModal" data-position="left" data-tooltip="Add Contact">
        <i class="large material-icons">add</i>
    </a>
</div>


<!-- Add Modal -->
<div id="addModal" class="modal">
    <div class="modal-content">
        <h4>Add Contact</h4>
        <form>
            <div class="row">
                <div class="col s12">
                    <div class="row">
                        <div class="input-field col s8 offset-s2">
                            @Html.LabelFor(model => model.Contact.Name)
                            <input id="contactName" type="text" class="validate center-align" asp-for="@Model.Contact.Name" />
                            <span asp-validation-for="@Model.Contact.Name" class="red-text text-darken-2" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s8 offset-s2">
                            @Html.LabelFor(model => model.Contact.Surname)
                            <input id="contactSurname" type="text" class="validate center-align" asp-for="@Model.Contact.Surname" />
                            <span asp-validation-for="@Model.Contact.Surname" class="red-text text-darken-2" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s8 offset-s2">
                            @Html.LabelFor(model => model.Contact.Email)<br /><br />
                            <input id="contactEmail" type="email" class="validate center-align" asp-for="@Model.Contact.Email"/>
                            <span asp-validation-for="@Model.Contact.Email" class="red-text text-darken-2" />
                        </div>
                    </div>
                </div>
        </form>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-red btn-flat">Cancel</a>
        <a id="submitContactBtn" class="waves-effect waves-green btn-flat">Submit</a>
    </div>
</div>
@section Scripts {

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}